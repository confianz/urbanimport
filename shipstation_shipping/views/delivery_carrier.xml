<?xml version='1.0' encoding='utf-8'?>
<odoo>

  <record id="view_delivery_carrier_form_with_provider_shp_station" model="ir.ui.view">
    <field name="name">delivery.carrier.form.provider.station</field>
    <field name="model">delivery.carrier</field>
    <field name="inherit_id" ref="delivery.view_delivery_carrier_form" />
    <field name="arch" type="xml">
      <xpath expr="//page[@name='destination']" position="before">
        <page string="ShipStation Configuration" attrs="{'invisible': [('delivery_type', '!=', 'shipstation')]}">
          <group>
            <field name="shipstation_id" readonly="1" />
            <field name="default_package_id" />
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
