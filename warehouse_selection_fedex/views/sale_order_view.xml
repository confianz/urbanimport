<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <record model="ir.ui.view" id="fedexsale_order_inherit">
            <field name="name">sale.order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_quotation_send']" position="after">
                    <button name="check_avs_update_wh" attrs="{'invisible': [('state','in', ('sale', 'cancel'))]}"
                            string="Set Warehouse"
                            type="object"
                            class="btn-primary"/>
                    <!--                    <button name="pdct_dup" attrs="{'invisible': [('state','in', ('sale', 'cancel'))]}"-->
                    <!--                            string="pdct_dup"-->
                    <!--                            type="object"-->
                    <!--                            class="btn-primary"/>-->
                </xpath>
                <notebook position="inside">
                    <page string="Warehouse Selection log">
                        <field name="log_note"/>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>
