<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="shipstation_warehouse_view_tree" model="ir.ui.view">
        <field name="name">shipstation.warehouse.tree</field>
        <field name="model">shipstation.warehouse</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="name" />
                <field name="shipstation_warehouse_id" />
                <field name="is_default" />
            </tree>
        </field>
    </record>


    <record id="shipstation_warehouse_view_from" model="ir.ui.view">
        <field name="name">shipstation.warehouse.form</field>
        <field name="model">shipstation.warehouse</field>
        <field name="arch" type="xml">
            <form create="0" edit="1">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Warehouse Name" />
                        <h1>
                            <field name="name" default_focus="1" required="1" />
                        </h1>
                        <div name="options">
                            <div>
                                <field name="is_default" readonly="1" />
                                <label for="is_default" />
                            </div>
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="shipstation_warehouse_id" />
                        </group>
                        <group>
                            <field name="warehouse_id" required="1" />
                            <label for="picking_type_id" string="Shipment Pickup" class="mt-3" />
                            <div class="mt-3">
                                <field name="picking_type_id" required="1" class="oe_inline"
                                    domain="[('code', 'in', ['outgoing', 'internal']), ('warehouse_id', '=', warehouse_id), ('name', '!=', 'Internal Transfers')]" />
                                <field name="picking_state" required="1" class="oe_inline ml-5" />
                            </div>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="shipstation_warehouse_action" model="ir.actions.act_window">
        <field name="name">ShipStation Warehouses</field>
        <field name="res_model">shipstation.warehouse</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="shipstation_warehouse_view_tree" />
        <field name="domain">[('shipstation_account_id', '=', active_id)]</field>
        <field name="context">{}</field>
    </record>

</odoo>
