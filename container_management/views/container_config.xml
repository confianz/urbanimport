        <record id="container_config_company_settings" model="ir.ui.view">
            <field name="name">Container Settings</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="17"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Container Management"
                         data-key="container_management">
                        <h2>Container Management Configuration</h2>
                        <div class="row mt16 o_settings_container" id="container_account_config">
                            <group string='Account Settings'>
                                <field name="freight_account_id"/>
                                <field name="customs_clearence_account_id"/>
                            </group>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="container_config_menu_company_action" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="view_id" ref="container_config_company_settings"/>
            <field name="context">{'module' : 'container_management', 'bin_size': False}</field>
        </record>


    </data>
</odoo>
