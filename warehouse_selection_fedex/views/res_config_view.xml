<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_incoming_buffer" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.ext</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="6"/>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='warehouse_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box"
                     id="buffer_days"
                     title="Add the buffer days for the calculation of incoming shipment to the Warehouse's">

                    <div class="o_setting_right_pane">
                        <label for="incoming_buffer_days"/>

                        <div class="text-muted">
                            Add the buffer days to consider in incoming shipments
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <span>
                                    <field name="incoming_buffer_days" class="oe_inline"/>
                                    days
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>
</odoo>
